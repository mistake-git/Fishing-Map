<div class="text-center mt-5 mb-5">
    <div class="form-wrapper">
        <h4 class="form-title  mb-3"><%= @form_title %></h4>   
        <%= form_with(model: @fish, local: true) do |form| %>
          <% if fish.errors.any? %>
            <div id="error_explanation">
              <% fish.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
          <div class="field form-group text-left">
            <%= form.label :name ,class:"form-text" %>
            <%= form.text_field :name ,class:"form-control"%>
          </div>
        
          <div class="field form-group text-left">
            <%= form.label :level ,class:"form-text"%>
            <%= form.select :level ,[[1], [2],[3],[4],[5]],{:prompt => "難易度を選択して下さい"},{class:"form-control"}%>
          </div>
        
          <div class="field form-grpup text-left">
            <%= form.label :season_begin ,class:"form-text"%>
            <%= form.date_select :season_begin ,{discard_year: true,discard_day: true},{class:"form-control"}%>
          </div>
          <div class="field form-grpup text-left">
            <%= form.label :season_end ,class:"form-text"%>
            <%= form.date_select :season_end ,{discard_year: true,discard_day: true},{class:"form-control"}%>
          </div>
        
          <div class="actions">
            <%= form.submit value="登録する",class:"btn-lg btn-info mt-4 m-4"%>
          </div>
        <% end %>
    </div>
</div>