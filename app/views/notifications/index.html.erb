<div class ="row">
    <div class="col-12 col-md-8 col-md-offset-4 mx-auto">
        <div class="card mt-5">
            <h4 class="text-info font-weight-bold text-center mx-auto my-5">お知らせ</h4>
            <div class="media-list m-5">
                <% if @notifications.exists? %>
                        <%= render @notifications %>
                <% else %>
                        <div style="height: 30vh">
                            <div class="text-secondary pb-5 text-center font-weight-bold">通知はありません</div>
                        </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
