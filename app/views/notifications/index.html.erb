<div class ="row">
    <div class="col-12 col-md-8 col-md-offset-4 mx-auto">
        <div class="notification">
            <h4 class="notification-title text-center mx-auto">お知らせ</h4>
            <div class="media-list">
                <% if @notifications.exists? %>
                        <%= render @notifications %>
                <% else %>
                        <div class="when-not-text pb-5">通知はありません</div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="notification-pagenation">
    <%= paginate @notifications %>
</div>