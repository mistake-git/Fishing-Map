<p id="notice"><%= notice %></p>


    
<div class="post-wrapper">
    <div class="post">
        <div class="post-img-area text-center mt-4 mb-4"><img src="/assets/sakana.jpg" class="post-show-img"></div>
            <div class="post-data">
                <dl class="row data-item">
                    <dt class="col-xs-12 col-md-2 text-right">魚種:</dt>
                    <dd class="col-xs-12 col-md-10"><%= @post.name %></dd>
                </dl>
                <dl class="row data-item">
                    <dt class="col-xs-12 col-md-2 text-right">餌:</dt>
                    <dd class="col-xs-12 col-md-10"><%= @post.feed %></dd>
                </dl>
                <dl class="row data-item">
                    <dt class="col-xs-12 col-md-2 text-right">天気:</dt>
                    <dd class="col-xs-12 col-md-10">晴れ</dd>
                </dl>
            </div>    
        <div class="post-map-area text-center pt-4"><img src="/assets/map.png " class="post-show-map"></div>
        <div class="post-btn-area text-right mb-2">
            <%= link_to '編集', edit_post_path(@post),class:"btn-sm" %> 
            <%= link_to '削除', @post, method: :delete, data: { confirm: 'Are you sure?' },class:"btn-sm" %>
        </div>
    </div>    
</div>









