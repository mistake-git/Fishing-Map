
        <%= link_to "/users/#{@post.user.id}" do %>
        
            <% if @post.user.image.attached? %>
                <div class="post-user-image">
                    <%= image_tag @post.user.image, class:"post-user-image ml-2 "%>
                </div>    
            <% else %>
                <div class="post-user-image">
                    <img src="../assets/user-image.png" class="post-user-image ml-2 ">
                </div>    
            <% end %>
         
         
         
                <%= @post.user.name %>
      
     
    
            <% if @post.image.attached? %>
                    <%= image_tag @post.image,class:"post-show-img"%>
            <% end %>    
            
            
             
             
             
                    <dt class=" col-md-2 text-right">魚種:</dt>
                    <dd class="col-md-10 post-name"><%= @post.name %></dd>
                </dl>
                <dl class="row data-item">
                    <dt class=" col-md-2 text-right">難易度:</dt>
                    <dd class="col-md-10 "><%= @level %></dd>
                </dl>
                <dl class="row data-item">
                    <dt class=" col-md-2 text-right">数量:</dt>
                    <dd class=" col-md-10 post-number"><%= @post.number %>匹</dd>
                </dl>
                <dl class="row data-item">
                    <dt class=" col-md-2 text-right">日時:</dt>
                    <dd class=" col-md-10 post-date"><%= @post.date %></dd>
                </dl>
                 <dl class="row data-item">
                    <dt class=" col-md-2 text-right">説明:</dt>
                    <dd class=" col-md-10 post-description"><%= @post.description %></dd>
                </dl>
                <dl class="row data-item">
                    <dt class=" col-md-2 text-right">使った餌:</dt>
                    <dd class=" col-md-10 post-feed"><%= @post.feed %></dd>
                </dl>
                <dl class="row data-item">
                    <dt class=" col-md-2 text-right">天気:</dt>
                    <dd class=" col-md-10 post-weather"><%= @post.weather %></dd>
                </dl>
        <% end %>        
                <div class="post-map-area text-center mb-4 pt-4">
                <div id="map" style='width: 80%; height: 500px;'></div>
                  <script type="text/javascript">
                    handler = Gmaps.build('Google');
                    handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
                      markers = handler.addMarkers([
                        {
                          "lat": <%= @post.latitude %>,
                          "lng": <%= @post.longitude %>,
                		  "infowindow": '<%= @post.address %></p><p><%= link_to "Googleマップで見る" ,"https://maps.google.co.jp/maps?q=loc:#{@post.latitude},#{@post.longitude}&iwloc=J",target: "_blank" %></p>',
                		  "picture": {
                		       "url": '<%= asset_path "map-icon.png" %>',
                                "width":  48,
                                "height": 48
                            }
                        }
                      ]);
                      handler.bounds.extendWith(markers);
                      handler.fitMapToBounds();
                      handler.getMap().setZoom(17);
                    });
                  </script>
                </div>
            </div>
            <%if @post.user.id == current_user.id %>
            <div class="post-btn-area text-right mb-2 mr-2">
                <%= link_to '編集', edit_post_path(@post),class:"btn-sm mt-2btn-info" %> 
                <%= link_to '削除', @post, method: :delete, data: { confirm: 'Are you sure?' },class:"btn-sm mt-2 btn-danger" %>
            </div>
            <% end %>    
        </div>
</div>

<div class="data-label text-center"><%= @post.name %>のデータ</div>
<div class="row no-gutters">
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="season-data-label mt-5 mb-5"><%= @post.name%>がよく釣れる時期</div>
        <%= line_chart @data1, width: "100%", height: "300px"%>
    </div>
</div>
<div class="row no-gutters">
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="feed-data-label mt-5 mb-5"><%= @post.name%>がよく釣れる餌</div>
        <%= pie_chart @data2, width: "100%", height: "300px"%>
    </div>
</div>