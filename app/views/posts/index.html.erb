<div class="search-bg-area mb-3">
    <div class="form-group text-center">
        <%= form_with url:'/posts/search', method: :get, local: true do |form| %>
            <div class="search-form">
              <%= form.text_field :search ,class:"form-control" ,placeholder: "魚検索(カタカナ)"  %>
            </div>
          <%= form.submit '検索' ,class:"btn btn-info ml-3 mb-1" %>
        <% end %>
    </div>
</div>
<div class="text-center index-title mb-3"><%= @title %></div>

<div class="row no-gutters">
    <div class="col-12 col-lg-8 col-lg-offset-4 mx-auto">
        <%= render "index" %>
    </div>
</div>

