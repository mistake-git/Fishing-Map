<%= link_to :back do %>
    <div class="mt-3 ml-3 back-btn"> < 戻る</div>
<% end %>
<div class="text-center index-title mb-3"><%= @title %></div>
<div class="form-group text-center mt-5 mb-5">
    <%= form_with url:'/posts/search', method: :get, local: true do |form| %>
        <div class="search-form">
          <%= form.text_field :search ,class:"form-control" ,placeholder: "釣りたい魚で検索(カタカナで入力してください)"  %>
        </div>
      <%= form.submit '検索' ,class:"btn btn-info ml-3 mb-1" %>
    <% end %>
</div>

<div class="container user-post">
     <% @posts.each do |post| %>
        <div class="card user-post-card mt-1 ml-1 mr-1 mb-1">
            <% if post.image.attached? %>
                <%= image_tag post.image,class:"card-img-top post-card-img mb-3" %>
            <% else %>
                <img src="/assets/sakana-img.jpg" class="card-img-top post-card-img default-img">
            <% end %>
              <div class="card-body mb-5 mt-1">
                <h6 class="card-title text-center card-label"><%= post.name %></h6>
                <p class="card-text card-tag">
                    <% if post.description? %>  
                        <div class="text-center mt-2 mb-2">
                            <%= post.description %>
                        </div>
                    <% else %>
                        <div class="post-description-default text-center mt-2 mb-2">
                            説明がありません
                        </div>
                    <% end %>
                    <% if post.feed? %>
                        <div class="badge badge-info">
                            餌: <%= post.feed %>
                        </div>
                    <% end %>
                    <% if post.weather? %>
                        <div class="badge badge-info">
                            天気: <%= post.weather %>
                        </div>
                    <% end %>
                    <% if post.size? %>
                        <div class="badge badge-info">
                            数量: <%= post.size %>
                        </div>
                    <% end %>
                    <% if post.size? %>
                        <div class="badge badge-info">
                            サイズ: <%= post.size %>cm
                        </div>
                    <% end %>
                    <% if post.number? %>
                        <div class="badge badge-info">
                            数量: <%= post.number %>
                        </div>
                    <% end %>
                    <% if post.date? %>
                        <div class="badge badge-info">
                            日時: <%= post.date %>
                        </div>
                    <% end %>
                    <% if post.address? %>
                        <div class="badge badge-info">
                            場所: <%= post.address%>
                        </div>
                    <% end %>
                </p>
                    <div class="user-card-bottom mr-1">
                        <div class="post-created_at">
                            <%= post.created_at %>の投稿
                        </div>    
                        <div class="text-right">
                            <%= link_to "詳細",post ,class:"btn-sm btn-info"%>
                        </div>
                    </div>
              </div>
        </div>
    <% end %>
    <% if @posts.empty? %>
        <div class="when-not-text">
            <%= @when_not_text %>
        </div>
    <% end %>
    <div class="pagenation">
        <%= paginate @posts%>
    </div>
</div>