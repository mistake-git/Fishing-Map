<div class="card text-center mx-auto mt-2" style="height:auto;">
    <% if @post.user.image.attached? %>
            <%=link_to image_tag(@post.user.image, class:"mt-2" ,style:"width: 150px; height:150px; border-radius: 50%;"),"/users/#{@post.user.id}"%>
    <% else %>
            <%= link_to "/users/#{@post.user.id}" do%>
                <img src="../assets/user-image.png" class="mt-2 "style="width: 150px; height:150px; border-radius: 50%;">
            <% end %>
    <% end %>
    <div class="card-body">
        <h5 class="font-weight-bold"><%= link_to "#{@post.user.name}","/users/#{@post.user.id}",class:"text-info"%></h5>
        <div class="area"><%= @user.address %></div>
        <p class="card-text text-center">
            <% if @post.user.introduce? %>
                <%= @post.user.introduce %>
            <% else %>
                <div class="user-introduce-default text-center">
                    まだ自己紹介がありません
                </div>
            <% end %>
        </p>
       <%= render "relationships/posts" %>
    </div>
</div>
