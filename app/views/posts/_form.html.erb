<div class="text-center mt-5 mb-5">
  <div class="form-wrapper pt-5 pb-5">      
    <%= form_with(model: post, local: true) do |form| %>
      <% if post.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% post.errors.full_messages.each do |message| %>
           <%= message %>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="field form-group">
       <%= form.label :"画像を選択してください" ,class:"form-text"%><br />
       <%= form.file_field :image %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"魚種" ,class:"form-text"%><br />
        <%= form.text_field :name,class:"form-control-sm post_name" %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"数量" ,class:"form-text"%><br />
        <%= form.number_field :number,class:"form-control-sm post_number" %>
      </div>
      
       <div class="field form-group">
        <%= form.label :"日時" ,class:"form-text"%><br />
        <%= form.date_select :date ,class:"post-date"%>
      </div>
      
      <div class="field form-group">
        <%= form.label :"説明" ,class:"form-text"%><br />
        <%= form.text_field :description,class:"form-control-sm post-description" %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"使ったエサ" ,class:"form-text"%><br />
        <%= form.select :feed, 
        [["アオイソメ"], ["ゴカイ"],["オキアミ"],["カニ"],["貝"],["配合エサ"],["ミミズ"],["アカムシ"],["練エサ"],["ルアー"]],:prompt => "エサを選択してください" 
        ,class:"post-feed"
        %>
      </div>
    
      <div class="field form-group">
        <%= form.label :"天気" ,class:"form-text"%><br />
        <%= form.select :weather, [["晴れ"], ["曇り"],["雨"],["その他"]],:prompt => "天気を選択してください" ,class:"post-weather"%>
      </div>
      
      <div class="field form-group">
        <%= form.label :"住所を入力してください" ,class:"form-text"%><br />
        <%= form.text_field :address,class:"form-control-sm post-address" %>
      </div>
      
      <div class="actions">
        <%= form.submit value="登録する",class:"btn btn-info"%>
      </div>
    <% end %>
  </div>    
</div> 

 