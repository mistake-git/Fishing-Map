<div class="text-center mt-5 mb-5">
  <div class="form-wrapper pt-5 pb-5">      
    <%= form_with(model: post, local: true) do |form| %>
      <% if post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
    
          <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      

      <div class="field form-group">
       <%= form.label :"画像を選択してください" ,class:"form-text"%><br />
       <%= form.file_field :image %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"魚種" ,class:"form-text"%><br />
        <%= form.text_field :name,class:"form-control-sm" %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"数量" ,class:"form-text"%><br />
        <%= form.number_field :number,class:"form-control-sm" %>
      </div>
      
       <div class="field form-group">
        <%= form.label :"日時" ,class:"form-text"%><br />
        <%= form.date_select :date %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"説明" ,class:"form-text"%><br />
        <%= form.text_field :description,class:"form-control-sm" %>
      </div>
      
      <div class="field form-group">
        <%= form.label :"使ったエサ" ,class:"form-text"%><br />
        <%= form.select :feed, [["アオイソメ"], ["ゴカイ"],["オキアミ"],["カニ"],["貝"],["配合エサ"],["ミミズ"],["アカムシ"],["練エサ"],["ルアー"]],:prompt => "エサを選択してください" %>
      </div>
    
      <div class="field form-group">
        <%= form.label :"天気" ,class:"form-text"%><br />
        <%= form.select :weather, [["晴れ"], ["曇り"],["雨"],["その他"]],:prompt => "天気を選択してください" %>
      </div>
      
      <div class="actions">
        <%= form.submit value="登録する",class:"btn btn-info"%>
      </div>
    <% end %>
  </div>    
</div> 

