<div class="select-map">
    <div class="modal fade" id="modal1" tabindex="-1"
    role="dialog" aria-labelledby="label1" aria-hidden="true" class="mx-auto">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title " id="label1">地図で場所を選択</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="fishing-map" id="map" style='width: 100%; height: 550px;'></div>
                <script type="text/javascript">
                    var map;
                    var markerOnMap;

                    function initMap() {
                        map = new google.maps.Map(document.getElementById('map'), { 
                            center: { 
                                <% if @user.address %>
                                    lat: <%= @user.latitude %>,
                                    lng: <%= @user.longitude %>
                                <% else %>
                                    lat: 35.593111,
                                    lng: 139.829865
                                <% end %>
                            },
                            zoom: 8 
                        });
                        function placeMarker(location, map) { 
                            if (markerOnMap) {
                              markerOnMap.setPosition(location);
                            }
                            else {
                              markerOnMap = new google.maps.Marker({
                                position: location,
                                map: map,
                              });
                            }
                        }
                        
                        
                        var getLatLng = google.maps.event.addListener(map, 'click', function(event) {
                            placeMarker(event.latLng, map);
                            document.getElementById("map_lat").value = event.latLng.lat();
                            document.getElementById("map_lng").value = event.latLng.lng();
                            
                            var lat = event.latLng.lat();
                            var lng = event.latLng.lng();
                            console.log(lat)
                            console.log(lng)
                            var latLngInput = [lat,lng]
                            console.log(latLngInput)
                        })
                        
                         function getAddress( getLatLng, latLngInput){
                              var latLngInput = new google.maps.LatLng(34.75874,135.849589);
                              var geocoder = new google.maps.Geocoder();
                              geocoder.geocode({
                                latLng: latLngInput
                              }, 
                              function(results) {
                                  var address = results[0].formatted_address;
                                  document.getElementById( "address" ).value = address;
                              });
                          };
                          
                          getAddress(getLatLng)
                          
                    }
                    
                    initMap()
                </script>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn-info" data-dismiss="modal">閉じる</button>
                </div>
            </div>
        </div>
    </div>
</div>