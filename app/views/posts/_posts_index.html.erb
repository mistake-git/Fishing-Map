<div class="container">
    <div class="row no-gutters">
        <% @posts.each do |post| %>
        <div class="col-xs-12 col-md-6 col-lg-3 mt-3"> 
            <div class="card mt-1 mb-1 ml-1 mr-1">
                <div class="post-card-user mt-1 ml-1">
                    <div class="card-user-img-wrapper mr-1">
                        <% if post.user.image.attached? %>
                            <%= image_tag post.user.image,class:"card-img-top post-card-user-img" %>
                        <% else %>
                            <img src="/assets/user-image.png" class="card-img-top post-card-user-img default-img">
                        <% end %>
                    </div>
                    <div class="post-card-user-name mr-1">
                        <%=link_to "#{post.user.name}","/users/#{post.user.id}" %>
                    </div>
                    <div class="post-card-user-area mr-1">
                        <%= post.user.address %>
                    </div>
                </div>
                <% if post.image.attached? %>
                    <%= image_tag post.image,class:"post-card-img card-img-top" %>
                <% else %>
                    <img src="/assets/sakana-img.jpg" class="post-card-img card-img-top default-img">
                <% end %>
                  <div class="card-body">
                    <h6 class="card-title text-center card-label"><%= link_to"#{post.name}",post %></h6>
                    <div class="card-tag">
                        <% if post.description? %>  
                            <div class="post-description text-center">
                                <%= post.description %>
                            </div>
                        <% else %>
                            <div class="post-description-default text-center">
                                説明がありません
                            </div>
                        <% end %>
                        <% if post.size? %>
                            <div class="badge badge-info size-badge">
                                サイズ: <%= post.size %>cm
                            </div>
                        <% end %>
                        <% if post.feed? %>
                            <div class="badge badge-info">
                                餌: <%= post.feed %>
                            </div>
                        <% end %>
                        <% if post.weather? %>
                            <div class="badge badge-info">
                                天気: <%= post.weather %>
                            </div>
                        <% end %>
                        <% if post.number? %>
                            <div class="badge badge-info">
                                数量: <%= post.number.to_i %>
                            </div>
                        <% end %>
                        <% if post.date? %>
                            <div class="badge badge-info">
                                日付: <%= post.date %>
                            </div>
                        <% end %>
                        <% if post.time? %>
                            <div class="badge badge-info">
                                時間: <%= post.time.to_s(:time)%>
                            </div>
                        <% end %>
                        <% if post.address? %>
                            <div class="badge badge-info">
                                場所: <%= post.address%>
                            </div>
                        <% end %>
                    </div>
                        <div class="card-bottom ml-5">
                            <% if Like.find_by(user_id: current_user.id, post_id: post.id) %>
                                <div class ="post-like-count ml-1 ml-2">
                                    <% @likes_count = Like.where(post_id: post.id).count %>
                                    <i class="fas fa-heart ml-1 mr-2 active"></i><%= @likes_count %>
                                </div>
                            <% else %>
                                <div class ="post-like-count ml-1 ml-2">
                                    <% @likes_count = Like.where(post_id: post.id).count %>
                                    <i class="fas fa-heart ml-1 mr-2"></i><%= @likes_count %>
                                </div>
                            <% end %>
                            <div class="post-comments-count ml-2">
                                <% @comments_count = Comment.where(post_id: post.id).count %>
                                <i class="fas fa-comment ml-1 mr-2"></i><%= @comments_count %>
                            </div>
                            <div class="post-created_at ml-2">
                                <%= "#{time_ago_in_words(post.created_at)}前"%>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>