<!DOCTYPE html>
<html>
  <head>
    <title>Fmap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=<%=ENV['KEY'] %>"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="icon" type="image/x-icon" href="/assets/application-icon.ico">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
  </head>
  <body>

    <div id="loading">
        <div class="loading-wrapper">
            <img src="/assets/fmap-site-logo.png" alt="loading" class="loading-img">
            <img src="/assets/loading_dot.gif" alt="loading" class="loading-dot">
        </div>
    </div>
    
    <div id="contents">
        <%= render 'layouts/header' %>
         <div class="text-center flash">
            <% flash.each do |name, msg|%>
             <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
            <% end %> 
        </div>
        <%= yield %>
        <%= render 'layouts/footer' %>
    </div>
    
  </body>
</html>
