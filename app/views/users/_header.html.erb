<div class="user-header mt-5">
    <div class="user-status row no-gutters">
        <div class="col-xs-12 col-md-2 text-center">
            <div id="user_img_area_<%= @user.id%>">
                <%= render "img" %>
            </div>
            <% if current_user && @user.id == current_user.id %>
                <div class="profile-img-edit" data-toggle="modal" data-target="#img_edit">設定</div>
            <% end %>
        </div>
        <div class="col-xs-12 col-md-1 text-center">
            <div class="user-name">
                <%= @user.name %>
            </div>
        </div>
        <div class="col-xs-12 col-md-3 text-center">
            <div id="follow_buttons_<%= @user.id %>">
               <%= render "relationships/users" %>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 text-center">
          <%= render "relationships/follow_count" %>
        </div>
    </div>
</div>


<%= render "bg_modal" %>
<%= render "profile_modal" %>


