<div class="text-center"> 
    <ul class="media-list">
        <div class="media-list-title mb-3">釣り人一覧</div>
        <% @users.each do |user| %>
            <%= link_to"/users/#{user.id}" do %>
                <li class="media media-users mb-1">
                    <div class="media-left mr-3">
                        <img src="../assets/user-image.png" class="media-user-image image-circle mt-2 ml-2">
                        <div class="media-user-name text-center"><%= user.name %></div>
                    </div>
                    <div class="media-body">
                    </div>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>