<div class="search-bg-area mb-3">
    <div class="form-group text-center">
        <%= form_with url:'/users/search', method: :get, local: true do |form| %>
            <div class="search-form">
              <%= form.text_field :search ,class:"form-control",placeholder: "名前で検索"%>
            </div>  
          <%= form.submit '検索' ,class:"btn btn-info ml-3 mb-1" %>
        <% end %>
    </div>
</div>

<div class="h5 text-center font-weight-bold text-info mb-3"><%= @title %></div>
<%= render "index" %>
<div class="pagenation">
    <%= paginate @users %>
</div>