<div class="password-mail-wrapper">
    <div class="text-center my-5">
        <div class="py-3">   
        <h4 class="form-title mb-3">メールを送信</h4>
            <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |form| %>
            <%= render "users/shared/error_messages", resource: resource %>
        
            <div class="field ">
                <%= form.label :email %><br />
                <%= form.email_field :email, autofocus: true, autocomplete: "email" ,class:"mt-3"%>
            </div>
        
            <div class="actions">
                <%= form.submit "メールを送信",class:"btn btn-info btn-block mb-4 mt-3"%>
            </div>
            <% end %>
        <%= render "users/shared/links"%>
        </div>
    </div>
</div>
