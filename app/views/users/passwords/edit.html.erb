    <div class="text-center mt-5 mb-5">
      <div class="form-wrapper pt-5 pb-5">     
        <h4 class="form-title mb-3">パスワードを変更</h4>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
        
          <div class="field form-group">
            <%= f.label :password, "New password",class:"form-text" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上で入力してください)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-contorl-sm" %>
          </div>
        
          <div class="field form-group">
            <%= f.label :password_confirmation, "Confirm new password",class:"form-text" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-contorl-sm" %>
          </div>
        
          <div class="actions">
            <%= f.submit "パスワードを変更",class:"btn btn-info mb-4" %>
          </div>
        <% end %>
        
        <%= render "users/shared/links" %>
      </div>    
    </div>        
        
