<div class="password-edit-wrapper">
    <div class="text-center my-5">
        <div class="py-3">     
            <h4 class="form-title mb-3">パスワードを変更</h4>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |form| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= form.hidden_field :reset_password_token %>
            
            <div class="field ">
                <%= form.label :password, "新規パスワード",class:" mb-3" %><br />
                    <% if @minimum_password_length %>
                        <em class="">(<%= @minimum_password_length %>文字以上で入力してください)</em><br />
                    <% end %>
                <%= form.password_field :password, autofocus: true, autocomplete: "new-password",class:"mt-1" %>
            </div>
            
            <div class="field ">
                <%= form.label :password_confirmation, "新規パスワード確認",class:" mb-3" %><br />
                <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
                <%= form.submit "パスワードを変更",class:"btn btn-info btn-block mb-4 mt-3" %>
            </div>
            <% end %>
            
            <%= render "users/shared/links" %>
        </div>    
    </div>  
</div>
        
