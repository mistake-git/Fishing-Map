<div class="text-center mt-5 mb-5">
  <div class="form-wrapper pt-5 pb-5">  
    <h4 class="form-title mb-3">アカウント</h4>
    
    <%= form_with(model: @user,url:"/users/profile/edit",local: true ,method: :post) do |form| %>
     <%= render "users/shared/error_messages", resource: resource %>
        <div class="field form-group text-left">
           <%= form.label :"ユーザー名" ,class:"form-text"%><br />
           <%= form.text_field :name ,placeholder:"ユーザー名" ,class:"form-control"%>
        </div>
        
        <div class="field form-group text-left">
           <%= form.label :"メールアドレス" ,class:"form-text"%><br />
           <%= form.text_field :email ,placeholder:"メールアドレス" ,class:"form-control"%>
        </div>
        
        <div class="field form-group text-left">
           <%= form.label :"活動エリア" ,class:"form-text"%><br />
           <%= form.text_field :address ,placeholder:"都道府県を入力して下さい" ,class:"form-control"%>
        </div>
     
        
        <div class="field form-group text-left">
           <%= form.label :"自己紹介" ,class:"form-text"%><br />
           <%= form.text_field :introduce ,placeholder:"よろしくおねがいします" ,class:"form-control"%>
        </div>
        
        <div class="actions">
            <%= form.submit "編集する" ,class:"btn-lg btn-info mb-4"%>
        </div>
    <% end %>
  </div>    
</div>    
