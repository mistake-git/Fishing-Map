<div class="text-center mt-5 mb-5">
  <div class="form-wrapper pt-5 pb-5">  
    <h4class="form-title mb-3">アカウント編集<%= resource_name.to_s.humanize %></h4>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field form-group">
        <%= f.label :email ,class:"form-text"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-contorl-sm"%>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field form-group">
        <%= f.label :password ,class:"form-text"%> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class:"form-contorl-sm"%>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password_confirmation ,class:"form-text"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-contorl-sm" %>
      </div>
    
      <div class="field form-group">
        <%= f.label :current_password ,class:"form-text"%> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password",class:"form-contorl-sm" %>
      </div>
    
      <div class="actions">
        <%= f.submit "編集する" ,class:"btn btn-info mb-4"%>
      </div>
    <% end %>
    
    <h3>Cancel my account</h3>
    
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    
    <%= link_to "Back", :back %>
  </div>    
</div>    
