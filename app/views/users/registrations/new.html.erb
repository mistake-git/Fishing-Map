<div class="text-center mt-5 mb-5">
  <div class="form-wrapper pt-5 pb-5">     
    <h4 class="form-title mb-3">新規登録</h4>
    
    <%= form_for(@user,url:{controller: 'registrations', action: 'create'}) do |form| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field form-group">
        <%= form.label :name ,class:"form-text mb-3"%><br />
        <%= form.text_field :name,class:"form-control" %>
      </div>
      
      <div class="field form-group">
        <%= form.label :email ,class:"form-text mb-3"%><br />
        <%= form.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>
      
      <div class="field form-group">
        <%= form.label :address ,class:"form-text mb-3"%><br />
        <%= form.text_field :address, autofocus: true, autocomplete: "address",class:"form-control" ,placeholder:"都道府県を入力して下さい"%>
      </div>
    
      <div class="field form-group">
        <%= form.label :password ,class:"form-text mb-3"%>
        <% if @minimum_password_length %>
        <em class="form-text">(<%= @minimum_password_length %>文字以上で入力してください)</em>
        <% end %><br />
        <%= form.password_field :password, autocomplete: "new-password",class:"form-control" %>
      </div>
    
      <div class="field form-group">
        <%= form.label :password_confirmation ,class:"form-text mb-3"%><br />
        <%= form.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control"%>
      </div>
    
      <div class="actions">
        <%= form.submit "新規登録",class:"btn-lg btn-info mb-4" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>    
</div>    

