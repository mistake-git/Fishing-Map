<div class="text-center my-5">
  <h4 class="form-title mb-3"><%= @form_title %></h4>
  <%= form_for(@user,url:{controller: 'registrations', action: 'create'}) do |form| %>
    <%= render "users/shared/error_messages", resource: resource %>
    
    <div class="field  text-left">
      <span class="badge badge-danger mr-1">※必須</span>
      <%= form.label :name ,class:"mb-3" %><br />
      <%= form.text_field :name ,id:"new-name" %>
    </div>
    
    <div class="field  text-left">
      <span class="badge badge-danger mr-1">※必須</span>
      <%= form.label :email ,class:"mb-3" %><br />
      <%= form.email_field :email, autofocus: true, autocomplete: "email",class:"" ,id:"new-email" %>
    </div>
    
    <div class="field  text-left">
      <span class="badge badge-danger mr-1">※必須</span>
      <%= form.label :password ,class:"mb-3"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
      <% end %><br />
      <%= form.password_field :password, autocomplete: "new-password",class:"" ,id:"new-password" %>
    </div>
    
    <div class="field  text-left">
      <span class="badge badge-danger mr-1">※必須</span>
      <%= form.label :password_confirmation ,class:"mb-3"%><br />
      <%= form.password_field :password_confirmation, autocomplete: "new-password" ,class:"" ,id:"new-password_confirmation"%>
    </div>
    
    <div class="actions">
      <%= form.submit "新規登録",class:"btn btn-info mb-4 btn-block" ,id:"user-create-btn" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>    

