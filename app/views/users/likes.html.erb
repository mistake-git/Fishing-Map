<div class="page-title ml-4 mt-4"><%= @title %></div>
<%= render partial: 'users_header'%>
  <div class="user-content row">
    <div class="col-3 text-center mt-5">
       <%= render partial: 'users_status'%>
    </div> 
    <div class="col-9">
        <div class="title-list">
            <%= link_to "/users/#{@user.id}",class:"decoration-none" do %>
                <div class="user-post-title mb-4 ml-1">
                    釣果
                    <div class="badge badge-light"><%= @user_posts_count %></div>
                </div>
            <% end %>
            <%= link_to "/users/#{@user.id}/likes" do %>
                <div class="user-post-title active mb-4 ml-1">
                    いいね
                    <div class="badge badge-light"><%= @user_likes_count %></div>
                </div>
            <% end %>
            <%= link_to "/users/#{@user.id}/comments" do %>
                <div class="user-post-title mb-4 ml-1">
                    コメント
                    <div class="badge badge-light"><%= @user_comments_count %></div>
                </div>
            <% end %>
        </div>
        <div class="container user-post">
             <% @likes.each do |like| %>
             <% post = Post.find_by(id: like.post_id) %>
                <div class="card user-post-card mt-1 ml-1 mr-1 mb-1">
                    <% if post.image.attached? %>
                        <%= image_tag post.image,class:"card-img-top post-card-img mb-3" %>
                    <% else %>
                        <img src="/assets/sakana-img.jpg" class="card-img-top post-card-img default-img">
                        <div class="default-text text-right mr-2">
                            画像が添付されていません
                        </div>
                    <% end %>
                      <div class="card-body mb-5 mt-1">
                        <h6 class="card-title text-center card-label"><%= post.name %></h6>
                        <p class="card-text card-tag">
                            <% if post.description? %>  
                                <div class="text-center mt-2 mb-2">
                                    <%= post.description %>
                                </div>
                            <% else %>
                                <div class="post-description-default text-center mt-2 mb-2">
                                    説明がありません
                                </div>
                            <% end %>
                            <% if post.feed? %>
                                <div class="badge badge-info">
                                    餌: <%= post.feed %>
                                </div>
                            <% end %>
                            <% if post.weather? %>
                                <div class="badge badge-info">
                                    天気: <%= post.weather %>
                                </div>
                            <% end %>
                             <% if post.size? %>
                                <div class="badge badge-info">
                                    サイズ: <%= post.size %>cm
                                </div>
                            <% end %>
                            <% if post.number? %>
                                <div class="badge badge-info">
                                    数量: <%= post.number %>
                                </div>
                            <% end %>
                            <% if post.date? %>
                                <div class="badge badge-info">
                                    日時: <%= post.date %>
                                </div>
                            <% end %>
                            <% if post.address? %>
                                <div class="badge badge-info">
                                    場所: <%= post.address%>
                                </div>
                            <% end %>
                        </p>
                            <div class="user-card-bottom mr-1">
                                <div class="post-created_at">
                                    <%= post.created_at %>の投稿
                                </div>    
                                <div class="text-right">
                                    <%= link_to "詳細",post ,class:"btn-sm btn-info"%>
                                </div>
                            </div>
                      </div>
                </div>
            <% end %>
            <% if @likes.empty? %>
                <div class="when-not-text">
                    <%= @when_not_text %>
                </div>
            <% end %>
        </div>
    </div>
</div>
    