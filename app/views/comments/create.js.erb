$("#commentModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();
<% if @status %>
$("#goalsIndex").append("<%= j(render @comment) %>");
<% else %>
$("#modalArea").html("<%= j(render 'comments/form', goal: @comment) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>