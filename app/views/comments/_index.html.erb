<h5 class="text-info font-weight-bold mt-5"><i class="fas fa-comments"></i>コメント</h5>
 <div class="media-list mt-4">
    <% @comments.each do |comment| %>
        <div class="media">
	        <div class="media-left">
	            <%if comment.user.image.attached?%>
                    <%= link_to image_tag(comment.user.image,style:"width: 50px; height: 50px; border-radius: 50%;"),"/users/#{comment.user.id}" %>
                <% else %>
                    <%= link_to "/users/#{comment.user.id}" do %>
                        <img src="../assets/user-image.png"  style="width: 50px; height: 50px; border-radius: 50%;">
                    <% end %>
                <% end %>
	        </div>
	        <div class="media-body">
		        <h5 class="media-heading ml-2"><%= link_to"#{comment.user.name}", "/users/#{comment.user.id}" ,class:"text-info"%></h5>
		            <div class="ml-5 text-secondary">
			            <%= comment.content %>
			        </div>
		        <div class="text-right">
		            <%= "#{time_ago_in_words(comment.created_at)}前"%>
                    <% if comment.user.id == current_user.id %>
                        <%= link_to("編集", "/posts/#{@post.id}/comments/#{comment.id}/edit",id:"comment-edit",remote: true) %>
                        <%= link_to("削除", "/posts/#{@post.id}/comments/#{comment.id}",method: :delete ,id:"comment-destroy",remote: true) %>
                    <% end %>
                </div>
	        </div>
        </div>
    <% end %>
    <div class="pagenation">
        <%= paginate @comments%>
    </div>
</div>

