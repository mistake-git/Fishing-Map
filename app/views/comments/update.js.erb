$("#commentModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<% if @status %>
$('[data-model_name="comment"]').filter('[data-id="<%= @comment.id %>"]').replaceWith("<%= j(render @comment) %>");
<% else %>
$("#modalArea").html("<%= j(render 'comments/form', comment: @comment) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>